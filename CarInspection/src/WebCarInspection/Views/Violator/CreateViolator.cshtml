@model WebCarInspection.Models.ViolatorViewModel

@{
    ViewData["Title"] = "Create violator";
}

<h5 style="margin: 2vw;">Create violator</h5>
<div style="width: 30vw; margin: 3vw;">
    <div class="form-group">
        @using (Html.BeginForm("CreateViolator", "Violator"))
        {
            @Html.AntiForgeryToken()
            <div>
                @Html.ValidationSummary(true)
                @await Component.InvokeAsync("GetViolations")
                @await Component.InvokeAsync("GetDrivers")
                @await Component.InvokeAsync("GetInspectors")
                <div class="flex-column">
                    @Html.LabelFor(model => model.ReinspectionDate)
                    <div class="controls input-append date form_datetime" data-link-field="dtp_input1">
                        <input name="ReinspectionDate" size="16" type="text" value="@DateTimeOffset.Now" class="form-control" readonly>
                        <span class="add-on"><i class="icon-remove"></i></span>
                        <span class="add-on"><i class="icon-th"></i></span>
                        @Html.ValidationMessageFor(model => model.ReinspectionDate)
                    </div>
                    <input type="hidden" id="dtp_input1" value="" /><br />
                </div>
                <input type="submit" class="btn btn-success" style="margin: 1vw;" value="Create" />
            </div>
        }
        @using (Html.BeginForm("ShowViolators", "Violator", FormMethod.Get))
        {
            <input type="submit" class="btn btn-secondary" style="margin: 1vw;" value="Cancel" />
        }
    </div>
</div>

